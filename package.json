{
  "name": "news_ngo",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:sync": "node -e \"require('./src/models').sequelize.sync({ alter: true }).then(()=>{console.log('synced')}).catch(e=>{console.error(e); process.exit(1)})\"",
    "db:reset": "node -e \"require('./src/models').sequelize.sync({ force: true }).then(()=>{console.log('reset')}).catch(e=>{console.error(e); process.exit(1)})\"",
    "logs:clear": "rm -f logs/*.log",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:prod": "docker-compose -f docker-compose.prod.yml down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**/*.js",
      "!src/models/index.js"
    ]
  }
}